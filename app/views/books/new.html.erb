<h1>Add a book</h1>

<div class = "row">
  <div class = "span6 offset3">
    <%= form_for(@book) do |f| %>

      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :author %>
      <%= f.text_field :author %>

      <%= f.label :description %>
      <%= f.text_field :description %>

      <%= f.submit "Create Book", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
