<% provide(:title, @user.firstname) %>
<div class="row">
  <aside class-"span4">
    <section>
      <h1>
      <%= gravatar_for @user %>
      <%= @user.firstname %> <%= @user.sirname %>
      </h1>
      <p><%= @user.firstname %> <%= @user.sirname %> <%= @user.email %></p>
    </section>
  </aside>
  <div class="span8">
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>

